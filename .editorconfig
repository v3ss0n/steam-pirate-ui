# top-most
root = true

# end of line
insert_final_new_line = true

# charset
[*.{js,sh,json,yml,md,{c,h}{,pp,xx},cc,hh,{c,le,sa}ss}]
charset = utf-8

# tab
[*.{js,json,md,{c,h}{,pp,xx},cc,hh,{c,le,sa}ss}]
indent_style = space
indent_size = 2
[*.sh]
indent_style = tab
indent_size = 4

# EOL
[*.{sh,zsh,1,2,3}]
end_of_line = lf
[*.{c,h}{,pp,xx},cc,hh]
end_of_line = crlf

# Trailing White Space
[*.{js,sh,json,yml,md,{c,h}{,pp,xx},cc,hh,{c,le,sa}ss}]
trim_trailing_whitespace = true
